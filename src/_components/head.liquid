<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<meta property="og:url" content="{{ url | relative_url }}">
<meta property="og:type" content="website">
<meta property="og:title" content="{{  data.title }} | BelongsToAvi">

{% capture og_description %}{{ data.description  | strip_newlines }}{% endcapture %}
{% assign description = og_description | default: "Some kind of cool description" %}
<meta property="og:description" content="{{ description }}">

{% capture og_image %}{{ data.image_name  | strip_newlines }}{% endcapture %}
{% assign image_name = og_image | default: "allegory_of_vanity.jpeg"| prepend: "/images/" %}

<meta property="og:image" content="{{ image_name | relative_url }}">

{% capture resource_title %}{{ data.title | strip_html | strip_newlines }}{% endcapture %}
<title>{% if resource_title != "Index" %}{{ resource_title | escape }} | {{ metadata.title | escape }}{% else %}{{ metadata.title | escape }}: {{ metadata.tagline | escape }}{% endif %}</title>

<meta name="description" content="{{ metadata.description }}" />

<link rel="stylesheet" href="{% asset_path css %}" />
<script src="{% asset_path js %}" defer></script>
{% live_reload_dev_js %}
